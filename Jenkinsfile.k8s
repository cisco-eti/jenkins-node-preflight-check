podTemplate(yaml: '''
    apiVersion: v1
    kind: Pod
    spec:
      containers:
      - name: maven
        image: maven:3.8.1-jdk-8
        command:
        - sleep
        args:
        - 99d
''') {

    node('jenkins-node') {
      stage('simple echo') {
        sh 'echo hello world'
      }
      stage('run build'){
        container('maven'){
          sh 'echo test'
        }
      }
    }
}