podTemplate(yaml: '''
    apiVersion: v1
    kind: Pod
    spec:
      containers:
      - name: maven
        image: maven:3.8.1-jdk-8
        command:
        - sleep
        args:
        - 99d
''') {

    node(POD_LABEL) {
        stage('Test on Maven container') {
            container('maven') {
                stage('simple echo') {
                     sh 'echo hello world'
                }
            }
        }
    }
}